<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/consult_er_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="문의 하기"
        app:titleTextColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/consult_view" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="APP 사용해 주셔서 감사합니다."
            android:textColor="@color/purple_700"
            android:textSize="28sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/consultationContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="궁금한 사항이나 의견이 있으시면 아래의 연락처로 연락해 주시기 바랍니다."
            android:textColor="@color/purple_700"
            android:textSize="25sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/consultationContent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="이메일: xxxx@gmail.com"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="고객센터 전화: 111111"
            android:textColor="@color/purple_700"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="We will update the online Q&amp;A  soon." />
    </LinearLayout>

</LinearLayout>